<view class="page">
    <view class="item" bindtap="onTap" data-type="order">
        <image src="{{ imgSrc }}" mode="widthFix"/>
        <view class="text-wrap">
            <text class="t1">顺序练习</text>
            <text class="t2">49 / 500</text>
        </view>
    </view>
    <view class="item" bindtap="onTap" data-type="test">
        <image src="{{ imgSrc }}" mode="widthFix"/>
        <view class="text-wrap">
            <text class="t1">模拟考试</text>
        </view>
    </view>
    <view class="item" bindtap="onTap" data-type="wrong">
        <image src="{{ imgSrc }}" mode="widthFix"/>
        <view class="text-wrap">
            <text class="t1">错题回顾</text>
            <text class="t2">500</text>
        </view>
    </view>
</view>