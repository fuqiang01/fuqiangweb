<view 
    class="wrapper" 
    style="transform: translateX({{ translate }}%)"
    bindtouchmove="onMove"
    bindtouchend="onEnd">
    <view 
        class="item" 
        wx:for="{{ arr }}"
        style="transform: translateX({{ index * 100 }}%)">
        <text>{{ index }}</text>
    </view>
</view>