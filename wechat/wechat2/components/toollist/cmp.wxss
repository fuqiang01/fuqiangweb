.wrapper{
    margin: 0 20rpx 30rpx;
}
.title{
    font-size: 35rpx;
    font-weight: bold;
    border-left: 7rpx solid #FF852F;
    line-height: 35rpx;
    padding-left: 25rpx;
    display: inline-block;
    margin-bottom: 35rpx;
}
.info{
    display: flex;
    flex-wrap: wrap;
}
.item{
    width: 25%;
    text-align: center;
    margin-bottom: 20rpx;
}
.img{
    width: 33%;
    display: block;
    margin: 0 auto;
}
.text{
    font-size: 25rpx;
}