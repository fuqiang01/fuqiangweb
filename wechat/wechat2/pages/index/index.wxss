/* banner */
.banner{
  margin: 0 20rpx;
  height: 350rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.banner swiper-item image{
  width: 100%;
  height: 100%;
}
/* serverList */
.server-list{
  display: flex;
  flex-wrap: wrap;
  padding: 40rpx 0;
}
.server-list .item{
  display: flex;
  flex-direction: column;
  width: 20%;
  align-items: center;
  padding: 20rpx 0;
}
.server-list .item image{
  width: 60%;
}
.server-list .item text{
  font-size: 25rpx;
  color: #444;
}
/* hotNews */
.hot-news{
  border: 1px solid #ccc;
  margin: 0 40rpx;
  display: flex;
  align-items: center;
}
.hot-news .title{
  width: 200rpx;
}
.hot-news-swiper{
  height: 60rpx;
  flex-grow: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #999;
  line-height: 60rpx;
  font-size: 28rpx;
  padding: 0 5rpx;
}
.hot-news .arrow{
  width: 40rpx;
}
/* serverInfo */
.server-info{
  padding: 30rpx 40rpx 0;
}
.server-info .title{
  display: flex;
  justify-content: space-between;
}
.server-info .title text{
  font-size: 30rpx;
  color: #222;
  display: inline-block;
  width: 120rpx;
  text-align: center;
}
.server-info .title .active{
  color: #DC143C;
  font-weight: bold;
}
.server-info .line-wrapper{
  position: relative;
  margin-top: 10rpx;
}
.server-info .line-wrapper .line{
  position: absolute;
  height: 5rpx;
  width: 120rpx;
  background: #DC143C;
  left: 0;
  transition: left .3s;
}
.server-info-swiper{
  padding: 30rpx 0;
  height: 630rpx;
}
.server-info-swiper swiper-item{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.server-info-swiper .item-2{
  background: #eee;
  width: 330rpx;
  height: 200rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.server-info-swiper .item-container{
  display: flex;
}
.server-info-swiper .text-wrapper{
  width: 60%;
}
.item-title{
  font-size: 30rpx;
  font-weight: bold;
  display: block;
}
.item-vice-title{
  font-size: 23rpx;
  color: #aaa;
  display: block;
  padding: 10rpx 0;
}
.item-flag{
  color: #fff;
  background: #DC143C;
  font-size: 23rpx;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
}
.server-info-swiper .item-2 image{
  width: 40%;
}

.server-info-swiper .item-4{
  background: #eee;
  width: 160rpx;
  height: 210rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.server-info-swiper .item-4 image{
  width: 60%;
}
/* footer */
.footer{
  margin: 0 40rpx;
  text-align: center;
}
.footer image{
  width: 100%;
}
.footer text{
  color: #ddd;
  font-size: 25rpx;
}