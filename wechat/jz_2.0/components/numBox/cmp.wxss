.num-box-wrap{
    position: fixed;
    top: 400rpx;
    width: 100%;
    height: calc(100vh - 400rpx);
    background: #f5f5f5;
    z-index: 10;
}
.num-box{
    /* position: fixed;
    bottom: 0;
    width: 100%; */
    height: 100rpx;
    /* background: #f5f5f5; */
    display: flex;
    align-items: center;
    justify-content: space-around;
    border-bottom: 1px solid #eee;
}
.num-box image{
    width: 40rpx;
    vertical-align: middle;
}
.num-box text{
    margin-left: 20rpx;
    vertical-align: middle;
    color: #999;
}
.topic-num-box{
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx;
    justify-content: start;
}
.topic-num-box .item{
    width: 68rpx;
    height: 68rpx;
    border-radius: 50%;
    color: #999;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1px solid #e0e0e0;
    box-sizing: border-box;
    margin-bottom: 39rpx;
}
.topic-num-box .item:not(:nth-of-type(7n)){
    margin-right: 39rpx;
}
.bg{
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, .3);
    z-index: 3;
}