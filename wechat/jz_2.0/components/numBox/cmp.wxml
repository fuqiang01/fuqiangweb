<view class="num-box">
    <view class="item" bindtap="onCollectionClick">
        <image mode="widthFix" src="{{ isCollection ? '/img/collection_action.png' : '/img/collection.png' }}" />
        <text>收藏</text>
    </view>
    <view class="item">
        <image mode="widthFix" src="/img/yes.png" />
        <text>{{ sumObj.yes }}</text>
    </view>
    <view class="item">
        <image mode="widthFix" src="/img/no.png" />
        <text>{{ sumObj.no }}</text>
    </view>
    <view class="item">
        <text wx:if="{{showTimer}}">{{ minutes }} : {{ seconds }}</text>
    </view>
    <view class="item">
        <image mode="widthFix" src="/img/all.png" />
        <text>{{ ( sumObj.yes + sumObj.no ) }} / {{ sumObj.all }}</text>
    </view>
</view>