.item{
    margin-bottom: 60rpx;
}
.item .user-info-wrap{
    display: flex;
}
.user-info-wrap image{
    width: 90rpx;
    border-radius: 10rpx;
    margin-right: 16rpx;
}
.user-info-wrap .text text{
    display: block;
}
.user-info-wrap .name{
    font-size: 36rpx;
    line-height: 50rpx;
}
.user-info-wrap .date{
    color: #aaa;
    font-size: 26rpx;
    line-height: 40rpx;
}
.msg-text{
    display: block;
    padding: 10rpx 0 20rpx;
    line-height: 42rpx;
}
.reply-delete{
    display: flex;
}
.reply-delete image{
    width: 32rpx;
    vertical-align: middle;
    margin-right: 4px;
}
.reply-delete text{
    display: inline-block;
    color: #777;
    vertical-align: middle;
}
.reply, .delete{
    padding: 6rpx 20rpx;
}
.reply-msg{
    margin-top: 10rpx;
    background-color: #f5f5f5;
    padding: 20rpx;
    border-radius: 20rpx;
    line-height: 40rpx;
}
.reply-msg text{
    display: inline-block;
    color: #555;
}