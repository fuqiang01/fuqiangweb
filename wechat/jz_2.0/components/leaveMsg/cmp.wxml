<view class="item">
    <view class="user-info-wrap">
        <image mode="widthFix" src="{{ msgInfo.photoUrl }}" />
        <view class="text">
            <text class="name">{{ msgInfo.name }}</text>
            <text class="date">{{ msgInfo.date }}</text>
        </view>
    </view>
    <text class="msg-text">{{ msgInfo.msgText }}</text>
    <view class="img-wrap {{ imgWrapClass }}">
        <image
            wx:for="{{msgInfo.imgArr}}" 
            wx:key="{{index}}" 
            mode="aspectFill" 
            src="{{ item }}" 
            bind:tap="previewImage"
            data-src="{{ item }}"/>
    </view>
    <view class="reply-delete" wx:if="{{isSuper}}">
        <view class="reply">
            <image mode="widthFix" src="/img/reply.png" />
            <text>回复</text>
        </view>
        <view class="delete">
            <image mode="widthFix" src="/img/delete.png" />
            <text>删除</text>
        </view>
    </view>
    <view class="reply-msg">
        <text>作者回复：</text>
        <text>{{ msgInfo.replyMsg }}</text>
    </view>
</view>