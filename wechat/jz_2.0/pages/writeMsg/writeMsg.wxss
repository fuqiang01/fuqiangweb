.wrap{
    background: #fff;
    padding: 20rpx;
}
.wrap textarea{
    padding-bottom: 20rpx;
    width: 100%;
}
.img-wrap{
    display: flex;
    flex-wrap: wrap;
}
.img-wrap .upload-btn{
    width: 200rpx;
    height: 200rpx;
    background-color: #f5f5f5;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-content: center;
    border-radius: 20rpx;
}
.upload-btn image{
    width: 80rpx;
}
.upload-btn text{
    display: block;
    color: #aaa;
}
.img-wrap .img{
    width: 200rpx;
    height: 200rpx;
    padding: 0 10rpx;
}
.img-wrap .img image{
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}