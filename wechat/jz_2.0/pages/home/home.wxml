<view class="container">
    <view class="photo-wrap">
        <view class="photo">
            <image mode="widthFix" src="{{ photoUrl }}" />
        </view>
        <button wx:if="{{!hasUserInfo}}" class="login-btn" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
        <text wx:else class="user-name">{{ name }}</text>
    </view>
    <view class="list">
        <view class="item">
            <view class="left">
                <image mode="widthFix" src="/img/topic.png" />
                <text>当前题库</text>
            </view>
            <view class="right">
                <text>摩托车</text>
                <image mode="widthFix" src="/img/arrow_r.png" />
            </view>
        </view>
        <view class="item">
            <view class="left">
                <image mode="widthFix" src="/img/results.png" />
                <text>我的成绩</text>
            </view>
            <view class="right">
                <text>马路杀手</text>
                <image mode="widthFix" src="/img/arrow_r.png" />
            </view>
        </view>
        <view class="item">
            <view class="left">
                <image mode="widthFix" src="/img/feedback.png" />
                <text>帮助反馈</text>
            </view>
            <view class="right">
                <image mode="widthFix" src="/img/arrow_r.png" />
            </view>
        </view>
        <view class="item">
            <view class="left">
                <image mode="widthFix" src="/img/about.png" />
                <text>关于我们</text>
            </view>
            <view class="right">
                <image mode="widthFix" src="/img/arrow_r.png" />
            </view>
        </view>
    </view>
</view>