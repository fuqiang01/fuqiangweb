.top-box{
    height: 450rpx;
    position: relative;
    background: linear-gradient(to bottom, #E28951, #FE5B47);
}
.highest-wrap{
    text-align: center;
    color: #fff;
    position: relative;
    margin-bottom: 60rpx;
}
#myCanvas{
    margin: 0 auto;
}
.highest{
    position: absolute;
    width: 100%;
    bottom: 0rpx;
    left: 0;
}
.highest .num{
    display: block;
    font-size: 120rpx;
    
}
.highest .text{
    display: block;
    font-size: 32rpx;
}
.topic-num-list{
    display: flex;
    justify-content: space-around;
}
.topic-num-list .item text{
    display: block;
    text-align: center;
    color: #fff;
}
.topic-num-list .item .flag{
    font-size: 40rpx;
}
.topic-num-list .item .num{
    line-height: 60rpx;
}
.top-box-bot image{
    width: 100%;
    display: block;
}