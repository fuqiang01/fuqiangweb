.btn-wrap{
    background-color: #fff;
    box-shadow: 0 4rpx 4rpx #eee;
    display: flex;
    padding: 0 20rpx 30rpx;
    position: fixed;
    top: 0;
    width: 100%;
    box-sizing: border-box;
}
.leave-msg{
    flex-grow: 1;
    background-color: #f5f5f5;
    padding: 10rpx 30rpx;
    border-radius: 10rpx;
}
.leave-msg image{
    width: 32rpx;
    vertical-align: middle;
    margin-right: 16rpx;
}
.leave-msg text{
    color: #aaa;
    vertical-align: middle;
}
.show-my-msg{
    flex-grow: 0;
    background-color: #B7CBFE;
    margin-left: 10rpx!important;
    padding: 10rpx 20rpx;
    border-radius: 10rpx;
    font-weight: normal;
    width: auto!important;
}
.msg-list{
    padding: 120rpx 20rpx 0;
}
.noMore{
    display: block;
    text-align: center;
    font-size: 26rpx;
    color: #aaa;
    line-height: 60rpx;
}