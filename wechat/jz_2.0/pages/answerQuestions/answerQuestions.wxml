<view class="info">
    <swiper 
        class="swiper"
        current="{{ current }}"
        duration="{{ isTouch ? 500 : 0 }}"
        bindanimationfinish="onFinish"
        bindchange="onChange"
        bindtouchstart="onStart">
            <block 
                wx:for="{{ topicArr }}"
                wx:key="id"
                wx:if="{{ index <= showIndex + 1 && index >= showIndex - 1 }}">
                <swiper-item class="swiper-item">
                    <scroll-view
                        class="scroll-view"
                        scroll-y="true">
                        <f-topicBox 
                            bindcorrect="correct" 
                            bindwrong="wrong" 
                            imgBaseUrl="{{ imgBaseUrl }}"
                            topicObj="{{ item }}"
                            didArr="{{ didArr }}"></f-topicBox>
                    </scroll-view>
                </swiper-item>
            </block>
        </swiper>
        <f-numBox 
            isCollection="{{ currentTopicIsCollection }}" 
            sumObj="{{ sumObj }}" 
            showTimer="{{ practiceType === 'test' }}" 
            countdownTime="{{countdownTime}}"
            bindoncollectionclick="onCollectionClick" />
</view>