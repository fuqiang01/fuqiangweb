page{
    background-color: #eee;
}
.banner{
    width: 750rpx;
}
.banner >image{
    width: 100%;
}
.service{
    background-color: #fff;
    padding: 30rpx 0;
    margin-bottom: 10rpx;
}
.service-list{
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}
.service-list > f-info{
    padding: 50rpx 20rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #ccc;
}

.value-added .title{
    display: flex;
}
.value-added .title > text{
    display: block;
    width: 50%;
    text-align: center;
    color: #fff;
    padding: 20rpx 0;
}
.value-added .title > text:nth-of-type(1){
    background-color: #5297ff;
}
.value-added .title > text:nth-of-type(2){
    background-color: #f45f4f;
}
.value-added .info .item{
    display: flex;
    font-size: 30rpx;
    margin: 40rpx 0;
    background-color: #fff;
    height: 180rpx;
}
.value-added .info .item > text{
    width: 275rpx;
    padding: 10rpx;
    color: #555;
}
.value-added .info .item .img-box{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    border: 15rpx solid #eee;
    background: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: -20rpx;
}
.value-added .info .item .img-box > image{
    width: 100rpx;
}